# ========================================
# CONFIGURACIÓN DE BASE DE DATOS
# ========================================
POSTGRES_USER=geovisor_user
POSTGRES_PASSWORD=change_this_password_in_production
POSTGRES_DB=geovisor_db
POSTGRES_PORT=5432

# ========================================
# CONFIGURACIÓN DEL BACKEND
# ========================================
# Clave secreta para JWT (CAMBIAR EN PRODUCCIÓN)
SECRET_KEY=your_secret_key_here_change_in_production_use_openssl_rand_hex_32

# Orígenes permitidos para CORS (separados por comas)
ALLOWED_ORIGINS=http://localhost,http://localhost:80,http://localhost:4200,http://localhost:3000

# Puerto del backend
BACKEND_PORT=8000

# URL de la base de datos (se construye automáticamente)
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@db:5432/${POSTGRES_DB}

# ========================================
# CONFIGURACIÓN DEL FRONTEND
# ========================================
# Puerto del frontend
FRONTEND_PORT=80

# URL del API (para el frontend)
API_URL=http://localhost:8000

